{
  "name": "@code-coaching/vuetiful",
  "version": "0.24.10",
  "license": "MIT",
  "scripts": {
    "dev": "onchange 'src/**/*.vue' 'src/**/*.ts' 'src/**/*.css' -- npm run build",
    "prebuild": "node 'scripts/intellisense.js'",
    "build": "rimraf dist && vue-tsc && vite build",
    "docs:dev": "cd docs && npm run dev",
    "docs:build": "cd docs && npm run build",
    "docs:serve": "cd docs && npm run serve",
    "format": "prettier --write \"**/*.{js,ts,vue,css,html,md,json}\" --ignore-path .gitignore",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "peerDependencies": {
    "vue": "^3.2.25"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.13",
    "highlight.js": "^11.7.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.14",
    "@vitejs/plugin-vue": "^2.0.0",
    "@vitest/coverage-c8": "^0.29.8",
    "@vue/test-utils": "^2.3.2",
    "autoprefixer": "^10.4.14",
    "clean-css": "^5.3.2",
    "jsdom": "^21.1.1",
    "onchange": "^7.1.0",
    "postcss": "^8.4.21",
    "prettier": "^2.8.4",
    "prettier-plugin-tailwindcss": "^0.2.4",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.3.1",
    "typescript": "^4.4.4",
    "vite": "^2.7.2",
    "vitest": "^0.29.8",
    "vue": "^3.2.25",
    "vue-tsc": "^0.29.8"
  },
  "files": [
    "src",
    "dist"
  ],
  "types": "./dist/types/index.d.ts",
  "module": "./dist/vuetiful.es.mjs",
  "exports": {
    ".": {
      "import": "./dist/vuetiful.es.mjs",
      "require": "./dist/vuetiful.umd.js",
      "types": "./dist/types/index.d.ts"
    },
    "./themes/*": "./src/themes/*",
    "./styles/*": "./src/styles/*",
    "./tailwind/*": "./src/tailwind/*"
  }
}
